

{% block head %}

{% endblock %}

{% block body %}
<head> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>

    {% block javascripts %}
        {{ encore_entry_script_tags('crud-menu') }}
    {% endblock %}
</head>

<div class="col-4 mx-auto">
    <div id="card" class="card">
        <div class="card-header bg-secondary text-white">
            <div class="row">
                <div class="col text-left">
                    <a class="btn btn-sm text-white" data-toggle="tooltip" title="Dashboard" href="/admin"><i class="fas fa-arrow-left"></i></a>
                </div>
                <div class="col text-center">
                    <text>TodoLists</text>
                </div>
                <div class="col text-right text-white">
                    <a class="btn btn-sm btn-outline-secondary text-white" href="/admin/todo/add"><i class="fas fa-plus"></i></a>
                </div>
            </div>
        </div>
        <div class="card-body">

            <table class="table table-striped table-hover task-table" style="width: 100%;" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                <thead>
                    <tr role="row">
                        <th class="sorting_asc">ID</th>
                        <th class="sorting text-center">Name</th>
                        <th class="text-right">Controls</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in crudlist %}
                        <tr class="text-left">
                            <th class="col-2">{{row.id}}</th>
                            <td class="text-center">{{row.name}}</td>
                            <td class="col-2 text-right">
                                <a href="/admin/todo/edit/{{row.id}}/" class="btn btn-sm btn-success"><i class="fa-solid fa-folder-open"></i></a>
                                <a href="/admin/todo/delete/{{row.id}}/" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
</div>
{% endblock %}