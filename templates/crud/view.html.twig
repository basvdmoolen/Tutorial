{% include 'links/base.html.twig' %}

{% block head %}
    {% block javascripts %}
        {{ encore_entry_script_tags('todo-view', null, 'main') }}
    {% endblock %}
{% endblock %}

{% block body %}
<head> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
</head>

<style>
    textarea {
        height: 400px !important;
    }
</style>

<div class="col-6 mx-auto">
    {{ form_start(form) }}
    <div id="card" class="card border-dark">
        <div class="card-header bg-dark text-white text-center">
            <div class="row">
                <div class="col text-left">
                    <a class="btn btn-sm text-white btn-outline-dark" href="/todo/menu"><i class="fas fa-arrow-left"></i></a>
                </div>
                <div class="col text-center">
                    <text>View ID: {{ id }}</text>
                </div>
                <div class="col"></div>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-6 mx-auto">
                    {{ form_widget(form.name)}}
                </div>
            </div>
            <div class="row mb-3" id="target">
                {{ form_widget(form.list) }}
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col text-right">
                    <!-- <a class="btn btn-secondary btn-sm" id="form_save" name="form[save]">Save</a> -->
                    {{ form_row(form.submit) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>
0
{% endblock %}